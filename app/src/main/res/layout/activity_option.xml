<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OptionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/optionToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심 카테고리 설정"
            android:textColor="#FF000000"
            android:textSize="24dp"
            android:padding="8dp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D1D1D1"/>

    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홈 화면에서 보고 싶지 않은 카테고리는"
        android:textStyle="normal"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FF000000"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="체크를 해제하세요"
        android:textStyle="normal"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FF000000"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최소 1개 이상 선택되어 있어야 합니다."
        android:textStyle="normal"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#818181"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_weight="1">
    <CheckBox
        android:id="@+id/ch01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="디지털/가전제품"
        android:textColor="#FF000000"
        android:checked="true"
        android:layout_margin="8dp"
        android:textSize="16dp"/>
        <CheckBox
            android:id="@+id/ch02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유아동/유아도서"
            android:layout_below="@id/ch01"
            android:textColor="#FF000000"
            android:layout_margin="8dp"
            android:checked="true"
            android:textSize="16dp"/>
        <CheckBox
            android:id="@+id/ch03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스포츠/레저"
            android:textColor="#FF000000"
            android:layout_below="@id/ch02"
            android:layout_margin="8dp"
            android:checked="true"
            android:textSize="16dp"/>
        <CheckBox
            android:id="@+id/ch04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여성의류"
            android:textColor="#FF000000"
            android:layout_below="@id/ch03"
            android:layout_margin="8dp"
            android:checked="true"
            android:textSize="16dp"/>
        <CheckBox
            android:id="@+id/ch05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게임/취미"
            android:textColor="#FF000000"
            android:layout_below="@id/ch04"
            android:layout_margin="8dp"
            android:checked="true"
            android:textSize="16dp"/>
        <CheckBox
            android:id="@+id/ch06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반려동물용품"
            android:layout_below="@id/ch05"
            android:textColor="#FF000000"
            android:checked="true"
            android:layout_margin="8dp"
            android:textSize="16dp"/>
        <CheckBox
            android:id="@+id/ch07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기타 중고물품"
            android:textColor="#FF000000"
            android:layout_below="@id/ch06"
            android:layout_margin="8dp"
            android:checked="true"
            android:textSize="16dp"/>
        <CheckBox
            android:id="@+id/ch08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가구/인테리어"
            android:textColor="#FF000000"
            android:layout_toRightOf="@id/ch01"
            android:layout_margin="8dp"
            android:checked="true"
            android:textSize="16dp"/>
        <CheckBox
            android:id="@+id/ch09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생활/가공식품"
            android:textColor="#FF000000"
            android:layout_toRightOf="@id/ch01"
            android:layout_below="@id/ch08"
            android:layout_margin="8dp"
            android:checked="true"
            android:textSize="16dp"/>
        <CheckBox
            android:id="@+id/ch10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여성잡화"
            android:textColor="#FF000000"
            android:layout_toRightOf="@id/ch01"
            android:layout_below="@id/ch09"
            android:layout_margin="8dp"
            android:checked="true"
            android:textSize="16dp"/>
        <CheckBox
            android:id="@+id/ch11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남성패션/잡화"
            android:textColor="#FF000000"
            android:layout_toRightOf="@id/ch01"
            android:layout_below="@id/ch10"
            android:layout_margin="8dp"
            android:checked="true"
            android:textSize="16dp"/>
        <CheckBox
            android:id="@+id/ch12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뷰티/미용"
            android:textColor="#FF000000"
            android:layout_toRightOf="@id/ch01"
            android:layout_below="@id/ch11"
            android:layout_margin="8dp"
            android:checked="true"
            android:textSize="16dp"/>
        <CheckBox
            android:id="@+id/ch13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도서/티켓/음반"
            android:textColor="#FF000000"
            android:layout_toRightOf="@id/ch01"
            android:layout_below="@id/ch12"
            android:checked="true"
            android:layout_margin="8dp"
            android:textSize="16dp"/>
        <CheckBox
            android:id="@+id/ch14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삽니다"
            android:textColor="#FF000000"
            android:layout_toRightOf="@id/ch01"
            android:layout_below="@id/ch13"
            android:checked="true"
            android:layout_margin="8dp"
            android:textSize="16dp"/>



    </RelativeLayout>


</LinearLayout>