<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textSize="24sp"
            android:textColor="#FF000000"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#A6A6A6"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리동네 서비스"
        android:textStyle="bold"
        android:textColor="#FF000000"
        android:textSize="20sp"
        android:layout_margin="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="클래스"
            android:textSize="14sp"
            android:textColor="#FF000000"
            android:padding="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/roundcategory"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="속눈썹"
            android:textSize="14sp"
            android:textColor="#FF000000"
            android:padding="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/roundcategory"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이사"
            android:textSize="14sp"
            android:textColor="#FF000000"
            android:padding="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/roundcategory"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="용달"
            android:textSize="14sp"
            android:textColor="#FF000000"
            android:padding="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/roundcategory"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="에어컨"
            android:textSize="14sp"
            android:textColor="#FF000000"
            android:padding="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/roundcategory"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인테리어"
            android:textSize="14sp"
            android:textColor="#FF000000"
            android:padding="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/roundcategory"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공방"
            android:textSize="14sp"
            android:textColor="#FF000000"
            android:padding="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/roundcategory"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네일"
            android:textSize="14sp"
            android:textColor="#FF000000"
            android:padding="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/roundcategory"/>
    </LinearLayout>

    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#A6A6A6"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="우리동네 서비스 더 찾아보기"
        android:textColor="#2196F3"
        android:textSize="16dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#CCCCCC"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvcha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="중고거래"
                    android:textColor="#FF000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="인기매물"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="디지털/가전"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="가구/인테리어"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="유아동/유아도서"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="생활/가공식품"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="스포츠/레저"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="여성잡화"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="여성의류"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="남성패션/잡화"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="게임/취미"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="뷰티/미용"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="반려동물용품"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="기타 중고물품"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="삽니다"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#CCCCCC" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="동네홍보"
                    android:textColor="#FF000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="중고차/오토바이"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="동네 구인구직"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="부동산"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="농수산물"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="지역업체 소개"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="과외/클래스 모집"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="40dp"
                    android:text="전시/공연/행사"
                    android:textAlignment="textStart"
                    android:textColor="#FF000000"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>